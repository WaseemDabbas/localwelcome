.overview {
  background: url(<%= image_url("coffeecups.jpg") %>) no-repeat center/cover;
  margin-top: $nav-margin * -1; // No space between the nav bar and the hero image.
  min-height: 200px;

  p {
    margin: 100px 0;
    font-size: 200%;
    background: rgba(255, 255, 255, 0.5);
    padding: 1rem;
    border-radius: 1rem;
    text-align: center;
  }

  .hero {
    margin-top: 3rem;
  }
}

.banner + .overview {
  margin-top: 0;
}

/* Mobile overrides for front page header */
@media (max-width: $mobile-breakpoint) {
  .overview {
    p {
      margin: 20px 0;
      font-size: 150%;
    }
  }
}

.chapters {
  margin-top: 1rem;

  .chapter-block {
    margin-bottom: 30px;
    padding: 3rem;
    text-align: center;
    min-height: 300px;
  }

  @media (max-width: $mobile-breakpoint) {
    .chapter-block {
      padding-top: 1rem;
      min-height: 150px;
    }
  }

  .col-md-4:nth-of-type(3n+1) {
    clear: both;
  }

  .col-md-4:nth-of-type(1n) .chapter-block { background-color: $flat-wax-flower; }
  .col-md-4:nth-of-type(2n) .chapter-block { background-color: $flat-cape-honey; }
  .col-md-4:nth-of-type(3n) .chapter-block { background-color: $flat-aqua-island; }
  .col-md-4:nth-of-type(4n) .chapter-block { background-color: $flat-snuff; }
}

.sponsors {
  margin-top: 3rem;
  padding-top: 1rem;
  border-top: 1px solid darken($flat-silver, 20%);

  h2 {
    padding-left: 15px;
    margin-top: 0;
  }
}

.sponsor-details {
  margin-bottom: 8rem;
  img {
    max-width: 100%;
  }
}

/* Top section on the "how it works" page */
.how-it-works {
  background: url(<%= image_url("meetup-background.jpg") %>) no-repeat center/cover;
  padding: 2rem 0;
  margin-top: $nav-margin * -1;

  .intro {
    background: rgba(255, 255, 255, 0.5);
    padding-right: 0;
    font-size: 125%;
    p {
      background: none;
      margin: 1rem 0;
      text-align: left;
    }
  }

  .portrait-pic {
    padding-left: 0;
    display: inline-block;
    max-width: 25%;
  }
}

